<%= simple_form_for(@book) do |f| %>

  <div class="form-inputs">
    <%= f.input :title, :label => "Titill" %>
    <%= f.input :description, :label => "Lýsing" %>
    <%= f.input :category, :label => "Flokkur" %>
    <%= f.input :isbn, :label => "ISBN númer" %>
    <%= f.input :author, :label => "Höfundur"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Vista' %>
  </div>
<% end %>
