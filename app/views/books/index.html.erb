<h3>Bækur</h3>

<table class="table table-striped"> 
  <thead> 
    <tr> 
	  <th>Titill</th>
	  <th>Flokkur</th>
	  <th>Höfundur</th>
	  <% if (current_user && (current_user.is_admin).to_i == 1) %><th>Aðgerðir</th><% end %> 
	</tr> 
  </thead> 
  <tbody>  
	  <% @books.each do |book| %> 
	    <tr> 
	      <td><%= link_to book.title, book_path(book) %></td>
	      <td><%= book.category %></td>
	      <td><%= book.author %></td>
	      <% if (current_user && (current_user.is_admin).to_i == 1) %>
		  	  <td>
		  	  	<%= link_to 'Breyta', edit_book_path(book), :class => 'btn btn-mini btn-action' %>
		  	  	<%= link_to 'Eyða', book_path(book), :method => :delete, :confirm => 'Ertu viss?', :class => 'btn btn-mini btn-danger' %>
		  	  </td> 
		  <% end %>
		</tr> 
	  <% end %> 
   </tbody> 
</table>
