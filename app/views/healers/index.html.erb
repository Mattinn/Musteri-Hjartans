<h1>Listing healers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Postal code</th>
    <th>User</th>
    <th>Treatments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @healers.each do |healer| %>
  <tr>
    <td><%= healer.name %></td>
    <td><%= healer.postal_code %></td>
    <td><%= link_to 'Show', healer %></td>
    <td><%= link_to 'Edit', edit_healer_path(healer) %></td>
    <td><%= link_to 'Destroy', healer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

