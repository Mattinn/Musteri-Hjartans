<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h2>Aðgangs upplýsingar</h2>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  
  <div class="field">
    <%= f.label :postal %><br />
    <%= f.text_field :postal %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <% Treatment.find(:all).each do |treatment| %> 
    <div> 
      <%= check_box_tag "user[treatment_ids][]", treatment.id, @user.treatments.include?(treatment) %> 
      <%= treatment.name %> 
      <%= treatment.description %>
      <%= treatment.category  %>
    </div>
  <% end %>
  
  <h2>Persónu upplýsingar</h2>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
