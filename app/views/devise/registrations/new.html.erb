<h2>Nýskráning</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "Nafn:" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Heimilsfang:" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "Símanúmer:" %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label "Póstnúmer:" %><br />
    <%= f.text_field :postal %>
  </div>

  <div class="field">
    <%= f.label "Netfang:" %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
	<%= f.label "Lykilorð:" %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label "Lykilorð aftur:" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <span class="help-block">Merktu við þær meðferðir sem þú tekur þú að þér:</span>

  	  <% Category.find(:all).each do |cat| %>
	    <p><%= cat.name %></p>
	  	<% Treatment.find(:all).each do |treatment| %>  
	  		<% if(treatment.category_id == cat.id) %>
		      	<%= check_box_tag "user[treatment_ids][]", treatment.id, @user.treatments.include?(treatment) %> 
		        <%= treatment.name %><br />
		    <%end%>
		<%end%>	
		<br />
	  <%end%>

  <span class="help-block">
    Ef þú tekur að þér meðferðir sem eru ekki á listanum eða vilt koma einhverju öðru á framfæri
    getur þú tekið það fram hér. Stjórnandi síðunnar mun svo fara yfir upplýsingarnar ásamt umsókninni.
  </span>
  
  <div class="field">
    <%= f.text_area :user_message %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Vista' %>
  </div>
<% end %>
