<h2>Nýskráning</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "Nafn:" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Heimilsfang:" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "Símanúmer:" %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label "Póstnúmer:" %><br />
    <%= f.text_field :postal %>
  </div>

  <div class="field">
    <%= f.label "Netfang:" %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
	<%= f.label "Lykilorð:" %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label "Lykilorð aftur:" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
