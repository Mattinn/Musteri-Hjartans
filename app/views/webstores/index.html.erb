<h3>Vefverslanir</h3>

<table class="table table-striped"> 
  <thead> 
    <tr> 
      <th>Vefverslun</th>
      <th>Vefslóð</th>
	  <% if (current_user && (current_user.is_admin).to_i == 1) %><th>Aðgerðir</th><% end %> 
	</tr> 
  </thead> 
  <tbody>  
	  <% @webstores.each do |webstore| webstore_path(webstore) %> 
	    <tr> 
	      <td><%= link_to webstore.title, webstore_path(webstore) %></td>
	      <td><%= webstore.link %></td>
	      <% if (current_user && (current_user.is_admin).to_i == 1) %>
		  	  <td>
		  	  	<%= link_to 'Breyta', edit_webstore_path(webstore), :class => 'btn btn-mini btn-action' %>
		  	  	<%= link_to 'Eyða', webstore_path(webstore), :method => :delete, :confirm => 'Ertu viss?', :class => 'btn btn-mini btn-danger' %>
		  	  </td> 
		  <% end %>
		</tr> 
	  <% end %> 
   </tbody> 
</table>
