<%= @user.build_healer %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Aðgangs upplýsingar</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <h2>Persónu upplýsingar</h2>
  <%= render :partial => 'healers/form',
             :locals => {:form => f} %> 
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
