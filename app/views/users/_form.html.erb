<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Aðgangs upplýsingar</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  <div class="field">

  <div class="field">
	<%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  
  <div class="field">
  	<%= f.label("Virkja notenda") %>
	<%= f.check_box :approved %> 
  </div>
  
  <div class="field">
  	<%= f.label("Virkja notenda með access") %>
	<%= f.check_box( @user.activate_user) %> 
  </div>	
  
  <div class="field">
    <%= f.label "Is the user an admin : " %> 
    <%= @user.is_admin? %><br />
  </div>
  
  

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
