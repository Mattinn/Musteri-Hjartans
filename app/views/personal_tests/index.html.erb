<h3>Tilbúin próf</h3>

<table class="table table-striped"> 
  <thead> 
    <tr> 
	  <th>Nafn</th>
	  <th>Lýsing</th>
	  <% if (current_user && (current_user.is_admin).to_i == 1) %><th>Aðgerðir</th><% end %> 
	</tr> 
  </thead> 
  <tbody>  
	  <% @personal_tests.each do |pt| %> 
	    <tr> 
	      <td><%= link_to pt.name, personal_test_path(pt) %></td> 
	      <td><%= pt.description %></td>
	      <% if (current_user && (current_user.is_admin).to_i == 1) %>
	  	  <td>
	  	  	<%= link_to 'Breyta', edit_personal_test_path(pt), :class => 'btn btn-mini' %> 
	  	  	<%= link_to 'Eyða', personal_test_path(pt), :method => :delete, :confirm => 'Ertu viss?', :class => 'btn btn-mini btn-danger' %>
	  	  </td> 
	  	  <% end %>
		</tr> 
	  <% end %> 
   </tbody> 
</table> 

<br />
<% if (current_user && (current_user.is_admin).to_i == 1) %>
  <%= link_to 'Nýtt próf', new_personal_test_path %>
<% end %> 
